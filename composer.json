{
    "name": "shuxian/easy-pay",
    "description": "专注 Alipay 和 WeChat 的支付扩展包",
    "keywords": ["alipay", "wechat", "pay"],
    "type": "library",
    "support": {
        "issues": "https://github.com/shuxian/pay/issues",
        "source": "https://github.com/shuxian/pay"
    },
    "require": {
        "php": ">=7.0.0",
        "ext-openssl": "*",
        "ext-simplexml":"*",
        "ext-libxml": "*",
        "ext-json": "*",
        "ext-bcmath": "*",
        "yansongda/supports": "^2.0",
        "symfony/http-foundation": "^4.0 || ^5.0",
        "symfony/event-dispatcher": "^4.0 || ^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "mockery/mockery": "^1.2",
        "friendsofphp/php-cs-fixer": "^2.15"
    },
    "autoload": {
        "psr-4": {
            "Shuxian\\Pay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shuxian\\Pay\\Tests\\": "tests"
        }
    },
    "license": "MIT"
}
